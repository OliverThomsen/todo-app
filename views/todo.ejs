<!DOCTYPE html>
<html lang="en" dir="ltr">
    <head>
        <meta charset="utf-8">
        <title>Todo App</title>

        <script src="https://code.jquery.com/jquery-3.3.1.min.js" integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8=" crossorigin="anonymous"></script>

        <link rel="stylesheet" href="/assets/styles.css" type="text/css">
        <script src="/assets/todo.js" type="text/javascript"></script>

    </head>
    <body>
        <main>
            <section>
                <h1>ToDo List</h1>
                <ul>
                    <% todos.forEach(function(todo) { %>
                        <li class="<%= (todo.done === true) ? 'done': '' %>" id="<%= todo._id %>">
                            <span>
                                <div></div>
                                <span><%= todo.description %></span>
                            </span>
                            <button>Delete</button>
                        </li>
                    <% }) %>
                </ul>
                <form>
                    <span></span>
                    <input type="text" name="todo" autocomplete="off" required>
                </form>
                <button class="show-completed-toggle">Show completed</button>
            </section>
        </main>
    </body>
</html>
